# Database
DATABASE_URL="postgresql://username:password@localhost:5432/kfood_shorts?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Redis
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# API Keys (공공데이터 - 나중에 추가)
PUBLIC_DATA_API_KEY="your-public-data-api-key"
PUBLIC_DATA_SERVICE_KEY="your-public-data-service-key"

# File Storage (AWS S3 or compatible)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-northeast-2"
S3_BUCKET_NAME="kfood-shorts-media"

# Application
NODE_ENV="development"
PORT="3000"
API_PREFIX="api/v1"

# CORS
FRONTEND_URL="http://localhost:3001"
MOBILE_APP_URL="exp://localhost:19000"

# Throttling
THROTTLE_TTL="60"
THROTTLE_LIMIT="100"

# File Upload
MAX_FILE_SIZE="10485760" # 10MB
ALLOWED_FILE_TYPES="jpg,jpeg,png,webp,mp4,mov"

# Monitoring
SENTRY_DSN=""