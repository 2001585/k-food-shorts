{
  "name": "k-food-shorts",
  "version": "1.0.0",
  "description": "공공데이터 기반 음식점 숏폼 콘텐츠 플랫폼",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:backend\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:mobile": "cd apps/mobile && npm start",
    "dev:backend": "cd backend && npm run start:dev",
    "build": "npm run build:web && npm run build:backend",
    "build:web": "cd apps/web && npm run build",
    "build:mobile": "cd apps/mobile && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:backend && npm run test:web",
    "test:backend": "cd backend && npm run test",
    "test:web": "cd apps/web && npm run test",
    "lint": "npm run lint:backend && npm run lint:web",
    "lint:backend": "cd backend && npm run lint",
    "lint:web": "cd apps/web && npm run lint",
    "typecheck": "npm run typecheck:backend && npm run typecheck:web",
    "typecheck:backend": "cd backend && npm run build",
    "typecheck:web": "cd apps/web && npm run type-check"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "@types/node": "^20.10.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/2001585/k-food-shorts.git"
  },
  "keywords": [
    "food",
    "shorts",
    "public-data",
    "react-native",
    "nextjs",
    "nestjs"
  ],
  "author": "2001585 <hoonso20@kunsan.ac.kr>",
  "license": "MIT"
}